{
  "name": "MadCourse",
  "description": "An extension to check enrollment status for UW-Madison students",
  "version": "2.2",
  "permissions": [
    "activeTab",
    "notifications",
    "webRequest",
    "alarms",
    "storage",
    "https://enroll.wisc.edu/*"
  ],
  "browser_action": {
    "default_title": "Open course",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "manifest_version": 2
}